.postentry(itemscope itemtype="http://schema.org/BlogPosting")
  <!-- Structured data start -->
  <!-- headline and dates if not visible -->
  <meta itemprop="headline" content="#{$post->title}">
  meta(itemprop="datemodified" content=date('c', $post->datetime))
  <!-- image | Url complete is important-->
  <div itemprop="image" itemscope="itemscope" itemtype="https://schema.org/ImageObject">
  -$image_url = Url::to('images/' . $post->thumb, true)
  meta(itemprop="url" content=$image_url)
  </div>
  <!-- author -->
  <div itemscope="itemscope" itemtype="http://schema.org/Person" itemprop="author">
  <meta itemprop="name" content="Jacob Moen">
  </div>
  <!-- publisher -->
  <div itemscope="itemscope" itemtype="http://schema.org/Organization" itemprop="publisher">
  <meta itemprop="name" content="Jacob Moen">
  </div>
  <div itemprop="logo" itemscope="itemscope" itemtype="https://schema.org/ImageObject">
  <meta contentc=$pype_url>
  <meta itemprop="url" content=$pype_url />
  <meta itemprop="width" content="36" /><meta itemprop="height" content="36" /></div>
  </div>
  <!-- Structured data end -->
  .m-row
    article
      span.imagewrap
        a.th.small.image(href=Url::to($post->url, true))
          img(width="200" height="150"
            src=Url::to('images/' . $post->thumb, true)
            title=$post->title
            alt=$post->title itemprop="image")
      header.m-col-s-12.m-center-s.m-col-m-8.m-right-m
        h1
          a(href=Url::to($post->url, true) rel="bookmark" title=$post->title)
            time(itemprop="dateCreated" datetime=date('c', $post->datetime))
            time.m-date(itemprop="datePublished" datetime=date('c', $post->datetime))
              +month($post->datetime)
              span.m-date-day
                +day($post->datetime)
              +year($post->datetime)
            span(itemprop="name")
              =$post->title
        p(itemprop="description")
          =$post->description
        a.button.small(href=Url::to($post->url, true)
          title=$post->title)
          |Read More
